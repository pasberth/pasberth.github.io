$(BUILDDIR):
    mkdir -p $(BUILDDIR)

$(BUILDDIR)/css: $(BUILDDIR)
    mkdir $(BUILDDIR)/css

$(BUILDDIR)/js: $(BUILDDIR)
    mkdir $(BUILDDIR)/js

$(BUILDDIR)/lib: $(BUILDDIR)
    mkdir $(BUILDDIR)/lib

$(BUILDDIR)/coffee: $(BUILDDIR)
    mkdir $(BUILDDIR)/coffee

clean: build
    rmdir $(BUILDDIR)/css
    rmdir $(BUILDDIR)/js
    rmdir $(BUILDDIR)/lib
    rmdir $(BUILDDIR)/coffee
    rmdir $(BUILDDIR)/img
    rmdir $(BUILDDIR)
