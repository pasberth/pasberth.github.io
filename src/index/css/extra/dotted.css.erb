<%
X = ENV["X"].to_f
Y = ENV["Y"].to_f
N = 6
%>

<%
X.to_i.times do |i|
  Y.to_i.times do |j|
k = N - ( ((X / 2 - i).abs ** 2 / X) +
          ((Y / 2 - j).abs ** 2 / Y)
        ).round
k = k > 1 ? k.to_i : 1
%>
#lifegame-control-<%= i %>-<%= j %> {

    width: <%= k %>px;
    height: <%= k %>px;
    border-width: 1px;
}<%
  end
end
%>