.lifegame-born {
    background-color: black;
    width: 64px;
    height: 64px;
    margin: 0;
    padding: 0;
}

.lifegame-live {
    background-color: gray;
    width: 64px;
    height: 64px;
    margin: 0;
    padding: 0;
}

.lifegame-dead {
    background-color: white;
    width: 64px;
    height: 64px;
    margin: 0;
    padding: 0;
}

#lifegame {
    width: 2400px;
    height: 2400px;
    margin: 0;
    padding: 0;
    position: fixed;
    left: 0;
    top: 0;
}

<% for i in ENV["X"].to_i.times %>
  <% for j in ENV["Y"].to_i.times %>

#lifegame-<%= i %>-<%= j %> {
    position: absolute;
    left:     <%= i * 80 %>px;
    top:      <%= j * 80 %>px;
    border-top-left-radius: 32px 32px;
    border-top-right-radius: 32px 32px;
    border-bottom-left-radius: 32px 32px;
    border-bottom-right-radius: 32px 32px;
}
  <% end %>
<% end %>
