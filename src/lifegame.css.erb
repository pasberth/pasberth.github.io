#lifegame {
    width: <%= ENV["X"].to_i * 80 %>px;
    height: <%= ENV["Y"].to_i * 80 %>px;
    margin: 0;
    padding: 0;
    position: fixed;
    left: 0;
    top: 0;
}

<% for i in ENV["X"].to_i.times %>
  <% for j in ENV["Y"].to_i.times %>

#lifegame-<%= i %>-<%= j %> {
    position: absolute;
    left:     <%= i * 80 %>px;
    top:      <%= j * 80 %>px;
}
  <% end %>
<% end %>

#lifegame-control {
    width: <%= ENV["X"].to_i * 6 %>px;
    height: <%= ENV["Y"].to_i * 6 %>px;
    position: relative;
    margin: 0;
    padding: 0;
}

<% for i in ENV["X"].to_i.times %>
  <% for j in ENV["Y"].to_i.times %>

#lifegame-control-<%= i %>-<%= j %>-wrapper {
    width: 6px;
    height: 6px;
    position: absolute;
    left:     <%= i * 6 %>px;
    top:      <%= j * 6 %>px;
}

  <% end %>
<% end %>
