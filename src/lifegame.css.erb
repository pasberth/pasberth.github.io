#lifegame {
    width: 2400px;
    height: 2400px;
    margin: 0;
    padding: 0;
    position: fixed;
    left: 0;
    top: 0;
}

<% for i in ENV["X"].to_i.times %>
  <% for j in ENV["Y"].to_i.times %>

#lifegame-<%= i %>-<%= j %> {
    position: absolute;
    left:     <%= i * 80 %>px;
    top:      <%= j * 80 %>px;
}
  <% end %>
<% end %>
